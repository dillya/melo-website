---
import Button from "./Button.astro";
---

<section id="hero">
  <div
    class="flex h-[400px] flex-col justify-between bg-[url('/hero.webp')] bg-cover bg-center bg-no-repeat"
  >
    <div class="mx-auto max-w-xl pt-5 text-center">
      <h1 class="block text-4xl font-bold text-gray-800 dark:text-neutral-200">
        Your personal Music Hub is Here
      </h1>
    </div>
    <div
      class="mx-auto flex max-w-xl justify-center gap-4 pb-5 text-center text-white"
    >
      <Button
        icon="mdi:arrow-right-drop-circle-outline"
        text="Connect to Melo"
        href="/discover"
        icon_on_right
        bg="bg-orange-400/75 hover:bg-orange-500 focus:bg-orange-500"
        border="border-neutral-600/75"
        padding="px-2 py-1"
      />
      <Button
        text="Discover Melo"
        href="/features"
        bg="bg-neutral-500/75 hover:bg-neutral-600 focus:bg-neutral-600"
        border="border-neutral-600/75"
        padding="px-2 py-1"
      />
    </div>
  </div>
</section>
