---
import { Icon } from "astro-icon/components";
import type { ACTION_ERROR_CODES } from "astro:actions";

interface Props {
  icon: string;
}

const { icon, ...props } = Astro.props;
---

<button
  class="text-white hover:text-orange-400 hover:bg-neutral-900 rounded-lg px-2 py-2 cursor-pointer"
>
  <Icon name={icon} class="w-auto h-6" {...props} />
</button>
